{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<h1>Posts</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for post in pagination %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.body|length > 50 ? post.body|slice(0, 50) ~ '...' : post.body }}</td>
                <td>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                    <a href="{{ path('app_post_delete', {'id': post.id}) }}" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No posts found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pagination.page - 1})) }}">Previous</a>
            </li>
        {% endif %}

        {% for i in 1..pagination.pageCount %}
            <li class="page-item {{ i == pagination.page ? 'active' : '' }}">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': i})) }}">{{ i }}</a>
            </li>
        {% endfor %}

        {% if pagination.page < pagination.pageCount %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pagination.page + 1})) }}">Next</a>
            </li>
        {% endif %}
    </ul>
</nav>

<a href="{{ path('app_post_new') }}" class="btn btn-success mt-3">Add New Post</a>
{% endblock %}
